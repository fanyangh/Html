<html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/plugins/layui/css/layui.css" media="all" />
</head>
<body>
<form class="layui-form" action="/user/update" method="post" style="margin-top: 20px;margin-left: 28px">
    <div class="layui-form-item">
        <div class="layui-input-inline">
            <input type="hidden" name="id"  id="id" autocomplete="off" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">用户名</label>
        <div class="layui-input-inline">
            <input type="text" name="login_name"  id="login_name" lay-verify="username" placeholder="请输入用户名" autocomplete="off" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">权限</label>
        <div class="layui-input-inline">
            <select name="role" class="layui-select" style="display: block;width: 190px;">
                <option value="0">普通用户</option>
                <option value="1">管理员</option>
            </select>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">修改名称</label>
        <div class="layui-input-inline">
            <input type="password" name="desrc"  lay-verify="password" placeholder="请输入新名称" autocomplete="off" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">重复密码</label>
        <div class="layui-input-inline">
            <input type="password" name="redesrc" lay-verify="password"  placeholder="请再次输入" autocomplete="off" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn submit">立即提交</button>
            <button type="reset" class="layui-btn layui-btn-primary">取  消</button>
        </div>
    </div>
</form>
</body>
<script src="/plugins/layui/layui.js" charset="utf-8"></script>
<script src="/js/jquery-3.2.1.min.js"></script>
<!-- 注意：如果你直接复制所有代码到本地，上述js路径需要改成你本地的 -->
<script>
    $(function(){
       $('.submit').click(function () {
           $('form').submit();
           var index = parent.layer.getFrameIndex(window.name);
           parent.layer.close(index);
       });

        $('button[type=reset]').click(function () {
            var index = parent.layer.getFrameIndex(window.name);
            parent.layer.close(index);
        });
    });
</script>
</html>