<html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/plugins/layui/css/layui.css" media="all" />
</head>
<body>
<form class="layui-form" action="/user/update" method="post" style="margin-top: 20px;margin-left: 28px">
    <div class="layui-form-item">
        <div class="layui-input-inline">
            <input type="hidden" name="id"  id="id" autocomplete="off" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">密码</label>
        <div class="layui-input-inline">
            <input type="password" name="password"  lay-verify="password" placeholder="请输入密码" autocomplete="off" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">重复密码</label>
        <div class="layui-input-inline">
            <input type="password" name="repassword" lay-verify="password"  placeholder="请重新输入密码" autocomplete="off" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn submit">立即提交</button>
            <button type="reset" class="layui-btn layui-btn-primary">取  消</button>
        </div>
    </div>
</form>
</body>
<script src="/plugins/layui/layui.js" charset="utf-8"></script>
<!-- 注意：如果你直接复制所有代码到本地，上述js路径需要改成你本地的 -->
<script>
    layui.use(['form'], function(){
        var form = layui.form
            ,layer = layui.layer
            ,$ = layui.jquery;

       $('.submit').click(function () {
           if($('input[name=password]').val()==$('input[name=repassword]').val()){
               $('form').submit();
               layer.msg('密码修改成功',{time:1000});
           }else{
                layer.msg('两次密码不一致',{time:1000});
                return false;
           }
           var index = parent.layer.getFrameIndex(window.name);
           parent.layer.close(index);
       });

        $('button[type=reset]').click(function () {
            var index = parent.layer.getFrameIndex(window.name);
            parent.layer.close(index);
            return false;
        });
    });
</script>
</html>